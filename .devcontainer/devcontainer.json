
{
    "name": "ros2_rust_roscon_spain:latest",
    "build": {
    "context": "..",
    "dockerfile": "../docker/Dockerfile",
    "args": {
      "XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}"
    }
    },
    "runArgs": [
    "--network=host",
    "--privileged"
    ],
    "containerEnv": {
      "DISPLAY": "${localEnv:DISPLAY}",
      "TERM": "xterm-256color"
    },

    "remoteUser": "cuser",
    "containerEnv": {
      // Convenience, for shell colors, aliases, etc
      "SHELL": "/bin/bash"
      }
}